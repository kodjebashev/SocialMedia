@model ImageViewModel
@{
    ViewData["Title"] = "DeleteImage";
}

<h1>Изтрии медиа</h1>

<h3>Сигурни ли сте че искате да изтриете изображението?</h3>

<div class="row">
    <img src="@Model.Base64Image"/>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="@Model.ImageId" />
    <input type="submit" value="Изтрий" class="btn btn-danger" />
</form>