@model SocialMedia.Web.Models.PostViewModel
@{
    ViewData["Title"] = "Create";
}
<h1>Създай публикацуя</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Posts">
            <!--Post model-->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.Content" autocomplete="off" id="user-input" class="form-control" />
                <input type="hidden" asp-for="@Model.GroupId" value="@Model.GroupId" />
                <input type="hidden" asp-for="@Model.TaggedFriends" value="" id="tagged-users" />
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <!--Tag friends-->
            <div id="search-dropdown" class="dropdown-content" style="display: none;">
                <input id="search-input" type="text" autocomplete="off" placeholder="Search for user" onkeyup="getUsersByPartName()">
                <div id="results"></div>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" onclick="assignTaggedUsers()" class="btn btn-primary">Създай</button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/js/tag-friends.js"></script>
}