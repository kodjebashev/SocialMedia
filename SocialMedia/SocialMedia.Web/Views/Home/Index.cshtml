<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    html, body {
        height: 100%;
        margin: 0;
        background-color: #eaeaea; /* Wall background */
    }

    .frame-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 30px;
        background-color: #eaeaea;
    }

    .carousel-frame {
        border: 25px solid #0b2c54; /* Dark blue frame */
        box-shadow: 0 0 40px rgba(0, 0, 0, 0.4);
        width: 90vw;
        height: 90vh;
        overflow: hidden;
        border-radius: 12px;
        position: relative;
    }

    .carousel-inner,
    .carousel-item,
    .carousel-item img {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .carousel-indicators [data-bs-target] {
        background-color: white;
    }



    .social-container {
        display: flex;
        gap: 20px;
    }

    .social-link {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        background: white;
        border-radius: 50%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        color: #555;
        text-decoration: none;
        font-size: 28px;
        transition: all 0.3s ease;
    }

        .social-link:hover {
            transform: scale(1.1);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
        }

        .social-link.instagram:hover {
            color: #e1306c;
        }

        .social-link.tiktok:hover {
            color: #000;
        }

        .social-link.facebook:hover {
            color: #3b5998;
        }

        .social-link.youtube:hover {
            color: #ff0000;
        }
</style>
