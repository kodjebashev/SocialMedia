@model ICollection<SocialMedia.Services.Group.GroupServiceModel>

@{
    ViewData["Title"] = "MyGroups";
   
}
<link rel="stylesheet" href="~/css/Groups.css" />
<h1>Моите групи</h1>

<p>
    <a asp-action="Create">Създай нова</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Заглавие
            </th>
        </tr>
    </thead>
    <tbody >
        @foreach (var group in Model)
        {
            <tr class="nav-item">
                <td>
                    @Html.DisplayFor(modelItem => group.Title)
                </td>
                <td class="nav-item">
                    @Html.ActionLink("Детайли", "Details", "Groups", new { id = group.GroupId }, new { @class = "btn btn-default " })
                </td>
                @if (group.AdminId == TempData["currentUserId"] as string)
                {
                    <td>
                        <a class="btn btn-default " asp-action="Edit" asp-route-id="@group.GroupId">Промени</a> |
                        <a class="btn btn-default " asp-action="Delete" asp-route-id="@group.GroupId">Изтрий</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
